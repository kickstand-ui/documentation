table {
    &:not(.table) {
        // border-collapse: collapse
        // margin: 1rem 0
        display: block
        overflow-x: auto

        tr {
            border-top: 1px solid rgb(55, 68, 79)

            &:nth-child(2n) {
                background-color: rgb(247, 248, 250);
            }

            th, td {
                border: 1px solid rgb(55, 68, 79)
                padding: 0.6em 1em
            }
        }
    }
}

table.table {
    width: 100%;
    // border-collapse: collapse;
    display: table
    border: .0625rem solid rgb(197, 209, 218);

    &.striped {
        tbody {
            tr:nth-child(odd) {
                background-color: rgba(247,248,250, 1);
            }
        }
    }

    &.hover {
        tbody {
            tr {
                &:hover {
                    background-color: rgb(222,229,234);
                }
            }
        }
    }

    thead {
        font-weight: bold;
        border-bottom: solid 0.125rem rgb(197, 209, 218);
    }

    tr { 
        background-color: white;
        
        th,
        td {
            vertical-align: bottom;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
            border: solid 0.0625rem rgb(197, 209, 218);
        }
    }
}

a.button.solid:hover,
a.button.clear:hover,
a.button.hollow:hover {
    text-decoration: none;
}

